{
  "name": "react-clean-ts",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "start": "vite",
    "test:unit": "vitest run --coverage --environment jsdom",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write '{src,test}/**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "build": "tsc && vite build",
    "preview": "export REACT_APP_API_URL=http://localhost/api && npm run build && vite preview --port 4111",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:4111 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:4111 'cypress run'",
    "release": "standard-version",
    "commit": "cz"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@iconify/react": "^4.1.0",
    "@mui/material": "^5.11.10",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "numeral": "^2.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.8.2",
    "simplebar-react": "^3.2.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/numeral": "^2.0.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.28.5",
    "commitizen": "^4.3.0",
    "cypress": "^12.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.0",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.28.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
